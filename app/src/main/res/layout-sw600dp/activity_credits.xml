<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayusheg.launcherlock.creditsActivity">

    <TextView
        android:id="@+id/textViewHeadC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:autoSizeTextType="uniform"
        android:text="Credits"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="332dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="uniform"
        android:text="Published in 2018"
        android:textAlignment="center"
        android:textSize="25sp"
        ads:layout_constraintEnd_toEndOf="@+id/adView4"
        ads:layout_constraintStart_toStartOf="@+id/adView4"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="314dp"
        android:autoSizeTextType="uniform"
        android:text="Created by Ayush Arora (EG) - 2017"
        android:textAlignment="center"
        android:textSize="25sp"
        ads:layout_constraintBottom_toTopOf="@+id/adView4"
        ads:layout_constraintEnd_toEndOf="@+id/adView3"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintLeft_toLeftOf="@+id/adView3"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="166dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        ads:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>